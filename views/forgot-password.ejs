
<%- include("./extended-files/_auth-header.ejs") -%>

<body class="hold-transition login-page">
  <div class="login-box">
    <div class="login-logo">
      <a href="/forgot-password"><b>Voting</b> System</a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
      <div class="card-body login-card-body p-4">
        <p class="login-box-msg">You forgot your password? Here you can easily retrieve a new password.</p>
      <form action="/recover-account" method="post">
        <div class="input-group mb-3">
          <input type="email" class="form-control" placeholder="Username">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <button type="submit" class="btn btn-primary btn-block">Request new password</button>
          </div>
          <!-- /.col -->
        </div>
      </form>
      <div class="text-center">
        <p class="mt-3 mb-1">
            Already have account? <a href="/">Login</a>
          </p>
          <p class="mb-0">
            Don't have account? <a href="/register" class="text-center">Register</a>
          </p>
      </div>
    
    </div>
    <!-- /.login-card-body -->
    </div>
    </div>
    <!-- /.login-box -->

<%- include("./extended-files/_auth-footer.ejs")-%>