<body class="hold-transition register-page" >
  <div class=" col-xl-12 col-md-12 col-sm-12 d-flex justify-content-center align-items-center mb-4">
    <!-- <div class="register-logo">
      <a href="/register"><b>Voting</b> System</a>
    </div> -->
  
    <div class="card-container card">
      <div class="card-body register-card-body col-12">

          <h3 class="text-center"><b>Add</b> Position</h3>

      <form action="/position" method="post" role="form" id="registrationForm">
          <!-- /.card-body -->
          <div class="card-body">
            <div class="form-group">
              <label for="first-name">Position</label>
              <input type="text" name="positionName" class="form-control" id="party-name" placeholder="Enter Position Name" required >
            </div>

            <div class="form-group">
                <div class="input-group">
                    <select name="election" class="form-select" aria-label="Default select example" required>
                        <option class="border border-secondary" selected>Election Type</option>
                        <% for(const electionModule of electionType) { %>
                        <option name="election"><%= electionModule.election %></option>
                        <% } %>
                    </select>
                </div>
              </div>

            <div class=" input-group">
              <button class="btn btn-radius-2 btn-primary submit btn-block swalDefaultSuccess " type="submit" id="submit">Submit</button>
            </div>
          </div>

          <!-- Form elements end! -->

      </form>
    </div>
    <!-- /.form-box -->
    </div><!-- /.card -->
    </div>
